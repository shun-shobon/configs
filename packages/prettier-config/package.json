{
	"name": "@shun-shobon/prettier-config",
	"version": "0.4.8",
	"type": "module",
	"description": "shun-shobon's Prettier config",
	"repository": {
		"directory": "packages/prettier-config",
		"type": "git",
		"url": "https://github.com/shun-shobon/configs.git"
	},
	"homepage": "https://github.com/shun-shobon/configs/packages/prettier-config#readme",
	"author": "NISHIZAWA Shuntaro <me@s2n.tech> (https://s2n.tech)",
	"license": "MIT",
	"main": "./dist/index.js",
	"exports": {
		".": {
			"import": "./dist/index.js",
			"require": "./dist/index.cjs"
		}
	},
	"types": "./dist/index.d.ts",
	"files": [
		"dist",
		"README.md",
		"LICENSE"
	],
	"scripts": {
		"build": "tsup-node src/index.ts",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"lint": "eslint .",
		"lint:ci": "eslint --max-warnings 0 .",
		"lint:fix": "eslint --fix ."
	},
	"peerDependencies": {
		"prettier": "^3.0.0"
	},
	"dependencies": {
		"local-pkg": "0.5.0",
		"prettier-plugin-astro": "0.14.1",
		"prettier-plugin-jsdoc": "1.3.0",
		"prettier-plugin-pkg": "0.18.1",
		"prettier-plugin-tailwindcss": "0.6.6"
	},
	"devDependencies": {
		"@types/node": "20.16.3",
		"prettier": "3.3.3"
	},
	"sideEffects": false
}
